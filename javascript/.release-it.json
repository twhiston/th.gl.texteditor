{
  "git": {
    "push": true,
    "requireCleanWorkingDir": false,
    "commitMessage": "chore: release v${version}",
    "requireBranch": [
      "main",
      "dev"
    ]
  },
  "hooks": {
    "after:@release-it/conventional-changelog:bump": [
      "rm -rf ./../.dist",
      "mkdir -p ./../.dist/tw.gl.repl",
      "rsync -av --progress ./../ ./../.dist/tw.gl.repl --exclude ./../.dist",
      "rm -rf ./../.dist/tw.gl.repl/.git ./../.dist/tw.gl.repl/.dist ./../.dist/tw.gl.repl/.github ./../.dist/tw.gl.repl/.vscode ./../.dist/tw.gl.repl/javascript ./../.dist/tw.gl.repl/.gitignore",
      "mkdir ./../.dist/tw.gl.repl/javascript",
      "rsync -av --progress ./dist/* ./../.dist/tw.gl.repl/javascript",
      "cd ./../.dist/; zip -r tw.gl.repl.zip ./tw.gl.repl"
    ],
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "github": {
    "release": true,
    "assets": [
      "./../.dist/*.zip"
    ]
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "header": "# tw.gl.repl changelog",
      "infile": "./../CHANGELOG.md"
    }
  }
}