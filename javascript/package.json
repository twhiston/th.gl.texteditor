{
  "name": "th.gl.texteditor",
  "version": "1.0.0",
  "description": "max msp opengl text editor",
  "main": "th.gl.editor.js",
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "scripts": {
    "compile": "npx tsc",
    "test": "nyc --cwd ./../ --report-dir=javascript/coverage --temp-dir=javascript/.nyc_output --reporter=lcov --reporter=text ava",
    "fuzz": "jsfuzz ./fuzzTarget.js corpus",
    "report": "nyc report --reporter=html --exclude-node-modules=false"
  },
  "author": "",
  "license": "GPL",
  "devDependencies": {
    "ava": "^5.2.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}